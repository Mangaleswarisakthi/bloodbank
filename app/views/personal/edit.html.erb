<body >
<center>
<h1>Personal Details</h1>

<%= form_for @personal, url: {action: :update, multipart: true} do |form| %>
	   &nbsp;&nbsp;&nbsp;<font face="Arial" color="red"><%= "<div>#{@personal.errors.full_messages.first}</div>".html_safe if @personal.errors.any? %>   </font>
	
	<div class="p">
	<table style=" color="gray"><tr><td>
		<%=form.label :Name %>&nbsp;&nbsp;</td><td>
		<%=form.text_field :name %></td></tr>
	<tr><td>
		<%= form.label :DateofBirth %>&nbsp;&nbsp;</td><td>
		<%= form.date_field :db %></td></tr>
	<tr><td>
		<%= form.label :Gender %>&nbsp;&nbsp;</td>
		<td><%= form.select :gender, %w{ Male Female }, {:prompt => "Gender..."} %></td></tr>
	<tr><td>
		<%= form.label :MobileNumber %>&nbsp;&nbsp;</td>
		<td><%= form.text_field :mobile %></td></tr>
<tr><td>
		<%= form.label :MailId %>&nbsp;&nbsp;</td>
		<td><%= form.email_field :mid%></td></tr>
<tr><td>
		<%= form.label :Address %>&nbsp;&nbsp;</td>
		<td><%= form.text_field :address %></td></tr>
<tr><td>
		<%= form.label :City %>&nbsp;&nbsp;</td>
		<td><%= form.text_field :city %></td></tr>

<tr><td><%= form.label :Images %></td><td> <%= form.file_field :image %></td></tr>

	</table>

	<p>	
		<%= link_to 'Back', { controller: 'personal', action: 'index'} %>
		<%= form.submit :update %>
	</p>
</div>
<% end %>
</center>
</body>

 
